<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Funcionarios</title>
    <link href="../assets/bootstrap-5.3.2/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <script src="../assets/bootstrap-5.3.2/bootstrap.min.js" crossorigin="anonymous"></script>
</head>

<body>

{{ include('Nav.twig') }}
{{ include('ModalFuncionarios.twig') }}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-center ">
                <h5 class="card-title">Listagem de Funcionários</h5>
            </div>
        </div>

        <div class="card-body">
            <div class="d-flex justify-content-center">
                <div class="d-flex column-gap-3">
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#inserirFuncionario">Inserir
                        Funcionário
                    </button>
                </div>
            </div>
        </div>

        <hr>

        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                <tr>
                    <th scope="col">Matrícula</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Sobrenome</th>
                    <th scope="col">Nascimento</th>
                    <th scope="col">Salário</th>
                    <th scope="col">Cargo</th>
                    <th scope="col">Ação</th>
                </tr>
                </thead>
                <tbody>
                {% if listaDeFuncionarios is not empty %}
                    {% for funcionario in listaDeFuncionarios %}
                        <tr>
                            <td>{{ funcionario.getMatricula() }}</td>
                            <td>{{ funcionario.getNome() }}</td>
                            <td>{{ funcionario.getSobrenome() }}</td>
                            <td>{{ funcionario.getNascimento() }}</td>
                            <td>R$ {{ funcionario.getSalario() }}</td>
                            <td>{{ funcionario.getCargo() }}</td>
                            <td>
                                <button class="btn btn-sm btn-primary" data-bs-toggle="modal"
                                        data-bs-target="#visualizarFuncionario-{{ funcionario.getMatricula() }}">Editar
                                </button>
                                <button class="btn btn-sm btn-danger" data-bs-toggle="modal"
                                        data-bs-target="#deletarFuncionario-{{ funcionario.getMatricula() }}">Excluir
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>

</body>
</html>